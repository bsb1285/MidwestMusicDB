<h3>Playlist Table</h3>

@if (Playlists == null)
{
    <text>Loading ...</text>
}
else if (Playlists.Length == 0)
{
    <button class="btn" href="/playlists/@Username/create">Create new</button>
}
else
{
    <text>Count: @Playlists.Length</text>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Duration</th>
            <th>Creation Date</th>
            <th>Song Count</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (Playlist p in Playlists)
        {
            <tr>
                <td>@p.title</td>
                <td>@p.total_duration</td>
                <td>@p.creation_date</td>
                <td>@p.song_count</td>
                <a class="btn btn-info" href="/playlists/@Username/@p.id/">View</a>
            </tr>
        }
        </tbody>
    </table>
}

@code {

    [Parameter]
    public string Username { get; set; }

    [Parameter]
    public Playlist[] Playlists { get; set; }

}